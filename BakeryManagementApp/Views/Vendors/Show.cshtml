@{
  Layout = "_Layout";
}

@using BakeryManagementApp.Models; 

<h3> Pierre, here are the orders for this vendor:</h3>
<ul class = "list-group">
  @foreach (Order order in @Model ["orders"])
  {
    <li class = "list-group-item"><a href= '/vendors/@Model["vendor"].Id/orders/@order.Id'>@order.Title</a></li>
  }
</ul>


<button class = "btn" type='submit'><a href = '/vendors/@Model["vendor"].Id/orders/new'>Add New Order</a></button>
