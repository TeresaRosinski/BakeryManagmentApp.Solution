@{
  Layout = "_Layout";
}

@using BakeryManagementApp.Models;

<h1>Vendors</h1>

@if (@Model.Count == 0)
{
  <h3>You currently have no vendors saved</h3>
} 

@foreach (Vendor vendor in Model)
{
  <h3><a href='/vendors/@vendor.Id'>Name: @vendor.Name, Details: @vendor.About</a></h3>
}

<p><a href='/'>Home</a></p>