@{
  Layout = "_Layout";
}

<div class = "container text-center jumbotron">
  <h1 >Order Details</h1>
  <h2 class="text-muted">@Model["vendor"].Name</a></h2>
 </div>

<table class="table table-striped table-hover ">
  <thead>
    <tr>
      <th>Name of Order</th>
      <th>Baked Good Ordered</th>
      <th>Quantity of Good Ordered</th>
      <th>Total Price</th>
      <th>Date Ordered</th> 
    </tr>
  </thead>
  <tbody>
    <tr>
      <td>@Model["order"].Title</td>
      <td>@Model["order"].BakedGoodType</td>
      <td>@Model["order"].Quantity</td>
      <td>@Model["order"].Price</td>
      <td>@Model["order"].Date</td>
    </tr>
  </tbody>
</table>



<button class = "btn"><a href='/vendors/@Model["vendor"].Id/orders/new'>Add another order</a></button>
